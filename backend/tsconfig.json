{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                // ✅ Required for ES Modules with Node
    "moduleResolution": "NodeNext",     // ✅ Required for .ts/.js ESM
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
